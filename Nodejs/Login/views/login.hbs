<div class="sidenav">
    <div class="login-main-text">
        <h2>Application<br> Login Page</h2>
        <p>Login or register from here to access.</p>
    </div>
</div>
<div class="main">
    <div class="col-md-6 col-sm-12">
        <div class="login-form">
            <form action="/login" method="post">
                <div class="form-group">
                    <label for="userEmail">User Email</label>
                    <input name="email" id="userEmail" type="text" class="form-control" placeholder="User Email"
                        value="{{email}}">
                </div>
                <div class="form-group">
                    <label for="userPassword">Password</label>
                    <input name="password" id="userPassword" type="password" class="form-control"
                        placeholder="Password">
                </div>
                <button type="submit" class="btn btn-black">Login</button>
                <a href="/signup" role="button" type="submit" class="btn btn-secondary">Register</a>
            </form>
            <br>
            <span>
                {{error.email}}
            </span>
        </div>
    </div>
</div>